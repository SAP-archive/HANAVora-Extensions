<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.sap.spark</groupId>
  <artifactId>spark-sap-parent</artifactId>
  <version>1.3.104</version>
  <packaging>pom</packaging>
  <name>Spark SAP Extensions Project</name>
  <modules>
    <module>compat161</module>
    <module>compat162</module>
    <module>core</module>
    <module>zeppelin</module>
    <module>sap-thriftserver</module>
    <module>dist</module>
  </modules>
  <properties>
    <jackson.version>2.4.4</jackson.version>
    <mockito.version>1.10.19</mockito.version>
    <scala.version>2.10.4</scala.version>
    <scala.binary.version>2.10</scala.binary.version>
    <!-- scala 2.10.x are binary compatible so if different components
         require different 2.10.x then there is no need to issue warnings -->
    <scala.compat.version>2.10</scala.compat.version>
    <spark.version>1.6.1</spark.version>
    <scalacheck.version>1.11.3</scalacheck.version>
    <scalaz.version>7.1.1</scalaz.version>
    <apache.curator.version>2.4.0</apache.curator.version>
    <sap.currency.version>2.1.0</sap.currency.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <minimum.code.covered.ratio>0.80</minimum.code.covered.ratio>
    <maven.compiler.source>1.7</maven.compiler.source>
    <maven.compiler.target>1.7</maven.compiler.target>
    <scala.maven.plugin.version>3.2.0</scala.maven.plugin.version>
    <jacoco.maven.plugin.version>0.7.4.201502262128</jacoco.maven.plugin.version>
    <!-- Property to not verify the location of all the project dependencies -->
    <dependency.locations.enabled>false</dependency.locations.enabled>
    <!-- Workaround to fix a bug related to report plugin -->
    <topSiteURL>http://sap.corp/</topSiteURL>
    <maven.test.skip>false</maven.test.skip>
    <maven.shade.createDependencyReducedPom>false</maven.shade.createDependencyReducedPom>
    <skipTests>${maven.test.skip}</skipTests>
    <skipUTs>${skipTests}</skipUTs>
    <skipITs>${skipTests}</skipITs>
  </properties>

  <distributionManagement>
    <site>
      <id>${project.artifactId}-site</id>
      <url>./</url>
    </site>
  </distributionManagement>

  <reporting>
    <plugins>
      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>scala-maven-plugin</artifactId>
        <version>${scala.maven.plugin.version}</version>
        <configuration>
          <args>
            <arg>-doc-root-content</arg>
            <arg>${basedir}/src/main/rootdoc.txt</arg>
          </args>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.jacoco</groupId>
        <artifactId>jacoco-maven-plugin</artifactId>
        <version>${jacoco.maven.plugin.version}</version>
      </plugin>
    </plugins>
  </reporting>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>com.fasterxml.jackson.core</groupId>
        <artifactId>jackson-databind</artifactId>
        <version>${jackson.version}</version>
      </dependency>
      <dependency>
        <groupId>org.apache.spark</groupId>
        <artifactId>spark-hive_${scala.binary.version}</artifactId>
        <version>${spark.version}</version>
      </dependency>
      <dependency>
        <groupId>org.apache.spark</groupId>
        <artifactId>spark-sql_${scala.binary.version}</artifactId>
        <version>${spark.version}</version>
      </dependency>
      <dependency>
        <groupId>org.scalatest</groupId>
        <artifactId>scalatest_${scala.binary.version}</artifactId>
        <version>2.2.1</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.scalacheck</groupId>
        <artifactId>scalacheck_2.10</artifactId>
        <version>${scalacheck.version}</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.mockito</groupId>
        <artifactId>mockito-all</artifactId>
        <version>${mockito.version}</version>
      </dependency>
      <dependency>
        <groupId>org.scalaz</groupId>
        <artifactId>scalaz-core_${scala.binary.version}</artifactId>
        <version>${scalaz.version}</version>
      </dependency>
      <dependency>
        <groupId>org.scalaz</groupId>
        <artifactId>scalaz-scalacheck-binding_${scala.binary.version}</artifactId>
        <version>${scalaz.version}</version>
      </dependency>
      <dependency>
        <groupId>com.sap.spark</groupId>
        <artifactId>core</artifactId>
        <version>1.3.104</version>
      </dependency>
      <dependency>
        <groupId>com.sap.spark</groupId>
        <artifactId>core</artifactId>
        <version>1.3.104</version>
        <type>test-jar</type>
      </dependency>

      <dependency>
        <!--
          XXX: Tachyon depends on an older version of curator-client,
               which causes NoClassDefFoundError: org/apache/curator/utils/InternalACLProvider
               now this matches spark-core dependency.
        -->
        <groupId>org.apache.curator</groupId>
        <artifactId>curator-client</artifactId>
        <version>${apache.curator.version}</version>
      </dependency>

      <dependency>
        <groupId>org.pegdown</groupId> <!-- required to create html test results output -->
        <artifactId>pegdown</artifactId>
        <version>1.4.2</version>
        <scope>test</scope>
      </dependency>

      <dependency>
        <!-- required by pegdown.
             Important: Originally scalatest and pegdown have a dependency to groupID org.ow2.asm
             and ArtifactID asm-all with version 4.1 in their POM.xml
             Since a version asm 3.x is in the classpath already and asm 3.x and asm 4.x are binary incompatible,
             we refer the 3.1 version of asm here -->
        <groupId>asm</groupId>
        <artifactId>asm</artifactId>
        <version>3.2</version>
        <scope>test</scope>
      </dependency>

    </dependencies>
  </dependencyManagement>


  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>versions-maven-plugin</artifactId>
          <version>2.1</version>
        </plugin>

        <plugin>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>2.17</version>
          <configuration>
            <skipTests>true</skipTests>  <!-- disabling surefire in favor of scalatest -->
          </configuration>
        </plugin>

        <plugin>
          <groupId>org.scalatest</groupId>
          <artifactId>scalatest-maven-plugin</artifactId>
          <version>1.0</version>
          <configuration>
            <reportsDirectory>${project.build.directory}/surefire-reports</reportsDirectory>
            <junitxml>.</junitxml>
            <!-- activating the stdout reporter such that test results are also visible in the
                 maven or Jenkins build. See http://www.scalatest.org/user_guide/using_the_runner for
                 explanation of the options. -->
            <stdout>WDT</stdout>
            <filereports>WDF TestSuite.txt</filereports>
            <!-- TODO: html report generation does not work for project thriftserver, so: defined for each sub project
                 <htmlreporters>${project.build.directory}/surefire-reports</htmlreporters>
              -->
            <testFailureIgnore>false</testFailureIgnore>
          </configuration>
          <executions>
            <execution>
              <id>test</id>
              <phase>test</phase>
              <goals>
                <goal>test</goal>
              </goals>
              <configuration>
                <suffixes>
                  Suite
                </suffixes>
                <skipTests>${skipUTs}</skipTests>
              </configuration>
            </execution>
            <execution>
              <id>integration-test</id>
              <phase>integration-test</phase>
              <goals>
                <goal>test</goal>
              </goals>
              <configuration>
                <suffixes>
                  SuiteIT
                </suffixes>
                <skipTests>${skipITs}</skipTests>
              </configuration>
            </execution>
          </executions>
        </plugin>

        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>3.1</version>
          <executions>
            <execution>
              <phase>compile</phase>
              <goals>
                <goal>compile</goal>
              </goals>
            </execution>
          </executions>
        </plugin>

        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>build-helper-maven-plugin</artifactId>
          <version>1.9.1</version>
        </plugin>

        <plugin>
          <groupId>org.scalastyle</groupId>
          <artifactId>scalastyle-maven-plugin</artifactId>
          <version>0.4.0</version>
          <configuration>
            <verbose>false</verbose>
            <failOnViolation>true</failOnViolation>
            <includeTestSourceDirectory>true</includeTestSourceDirectory>
            <failOnWarning>false</failOnWarning>
            <sourceDirectory>${basedir}/src/main/scala</sourceDirectory>
            <testSourceDirectory>${basedir}/src/test/scala</testSourceDirectory>
            <configLocation>${basedir}/../project/scalastyle_config.xml</configLocation>
            <outputFile>scalastyle-output.xml</outputFile>
            <outputEncoding>UTF-8</outputEncoding>
          </configuration>
          <executions>
            <execution>
              <phase>verify</phase>
              <goals>
                <goal>check</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>

    <plugins>
      <plugin>
        <groupId>org.jacoco</groupId>
        <artifactId>jacoco-maven-plugin</artifactId>
        <version>${jacoco.maven.plugin.version}</version>
        <configuration>
          <!-- XXX: JaCoCo fails to instrument Hive parser classes -->
          <excludes>
            <exclude>**/hive/ql/parse/**</exclude>
          </excludes>
        </configuration>
        <executions>
          <execution>
            <id>default-prepare-agent</id>
            <phase>initialize</phase>
            <goals>
              <goal>prepare-agent</goal>
            </goals>
          </execution>
          <execution>
            <id>default-report</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>report</goal>
            </goals>
          </execution>
          <execution>
            <id>default-check</id>
            <phase>verify</phase>
            <goals>
              <goal>check</goal>
            </goals>
            <configuration>
              <rules>
                <rule>
                  <element>BUNDLE</element>
                  <limits>
                    <limit>
                      <counter>LINE</counter>
                      <value>COVEREDRATIO</value>
                      <minimum>${minimum.code.covered.ratio}</minimum>
                    </limit>
                  </limits>
                </rule>
              </rules>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>scala-maven-plugin</artifactId>
        <version>${scala.maven.plugin.version}</version>
        <configuration>
          <scalaCompatVersion>${scala.compat.version}</scalaCompatVersion>
          <recompileMode>incremental</recompileMode>
          <useZincServer>true</useZincServer>
          <args>
            <arg>-Xmax-classfile-name</arg>
            <arg>128</arg>
          </args>
        </configuration>
        <executions>
          <execution>
            <id>scala-compile-first</id>
            <phase>process-resources</phase>
            <goals>
              <goal>add-source</goal>
              <goal>compile</goal>
            </goals>
          </execution>
          <execution>
            <id>scala-test-compile</id>
            <phase>process-test-resources</phase>
            <goals>
              <goal>testCompile</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>2.4</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
              <goal>test-jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>release.build</id>
      <activation>
        <property>
          <name>ldi.releaseBuild</name>
        </property>
      </activation>
      <properties>
        <skipTests>true</skipTests>
      </properties>
    </profile>
    <profile>
      <id>full-tests</id>
      <dependencies>
        <dependency>
          <groupId>com.sap.hl.currency</groupId>
          <artifactId>currency-conversion</artifactId>
          <version>${sap.currency.version}</version>
        </dependency>
      </dependencies>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.scalatest</groupId>
              <artifactId>scalatest-maven-plugin</artifactId>
              <configuration>
                <tagsToExclude>
                  org.scalatest.tags.SporadicFailure
                </tagsToExclude>
              </configuration>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>
    <profile>
      <id>fast-tests</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.scalatest</groupId>
              <artifactId>scalatest-maven-plugin</artifactId>
              <configuration>
                <tagsToExclude>
                  org.scalatest.tags.Slow,org.scalatest.tags.SporadicFailure,com.sap.tags.ExternalLibraryNeeded
                </tagsToExclude>
              </configuration>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>
    <profile>
      <id>push-validation</id>
      <dependencies>
        <dependency>
          <groupId>com.sap.hl.currency</groupId>
          <artifactId>currency-conversion</artifactId>
          <version>${sap.currency.version}</version>
        </dependency>
      </dependencies>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.scalatest</groupId>
              <artifactId>scalatest-maven-plugin</artifactId>
              <configuration>
                <tagsToExclude>
                  org.scalatest.tags.Slow,org.scalatest.tags.SporadicFailure
                </tagsToExclude>
              </configuration>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>
    <profile>
      <id>mapr50</id>
      <repositories>
        <repository>
          <id>mapr-releases</id>
          <url>https://repository.mapr.com/maven/</url>
          <snapshots><enabled>false</enabled></snapshots>
          <releases><enabled>true</enabled></releases>
        </repository>
      </repositories>
      <properties>
          <hadoop.version>2.7.0-mapr-1509</hadoop.version>
      </properties>
    </profile>
    <profile>
      <id>spark-1.6.2</id>
      <properties>
        <spark.version>1.6.2</spark.version>
      </properties>
    </profile>
  </profiles>
</project>
